# Nova Agent - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===================================
# REQUIRED CONFIGURATION
# ===================================

# Groq API Key (get from https://console.groq.com)
# This is REQUIRED for AI vision functionality
GROQ_API_KEY=gsk_your_actual_api_key_here

# ===================================
# APPLICATION SETTINGS
# ===================================

# Port to run the application on
PORT=7860

# Python environment settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Playwright browser settings
PLAYWRIGHT_BROWSERS_PATH=/ms-playwright

# ===================================
# OPTIONAL CONFIGURATION
# ===================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
NOVA_LOG_LEVEL=INFO

# Session timeout in seconds (default: 3600 = 1 hour)
NOVA_SESSION_TIMEOUT=3600

# Maximum number of actions per session
NOVA_MAX_ACTIONS=100

# Screenshot retention time in hours
NOVA_SCREENSHOT_RETENTION=24

# ===================================
# NORTHFLANK SPECIFIC
# ===================================

# These are automatically set by Northflank
# NORTHFLANK_SERVICE_NAME=nova-agent
# NORTHFLANK_DEPLOYMENT_ID=auto-generated
# HOST=0.0.0.0

# ===================================
# DEVELOPMENT SETTINGS
# ===================================

# Set to 1 for development mode
DEVELOPMENT_MODE=0

# Enable debug features (0 or 1)
DEBUG_ENABLED=0

# ===================================
# SECURITY SETTINGS
# ===================================

# Maximum concurrent sessions
NOVA_MAX_SESSIONS=10

# Enable session encryption (0 or 1)
NOVA_ENCRYPT_SESSIONS=0

# ===================================
# MONITORING & ANALYTICS
# ===================================

# Enable performance monitoring (0 or 1)
NOVA_MONITORING_ENABLED=1

# Health check interval in seconds
NOVA_HEALTH_CHECK_INTERVAL=30

# API rate limiting (requests per minute)
NOVA_RATE_LIMIT=100
